{
  "compilerOptions": {
    "jsx": "preserve",
    "types": [
      "jest",
      "node",
      "@testing-library/jest-dom"
    ],
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./frontend/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "frontend/.next/types/**/*.ts",
    "frontend/next-env.d.ts",
    ".next/types/**/*.ts",
    "../types/columns.tsx",
    "../types/projects.ts",
    "../types/task.ts"
  ],
  "exclude": [
    "frontend/node_modules"
  ]
}
